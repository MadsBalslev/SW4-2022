main recipe Pasta{

    ingredients{
        liquid Water (to-taste)
    },

    tools{
        tool LiquidContainer[contain : liquid],
        tool Spoon[Stir: content in LiquidContainer => ingredient]
    },
    
    steps{
        LiquidContainer do contain Water,
        Spoon do Stir content in LiquidContainer,
        serve content in LiquidContainer
    }
}