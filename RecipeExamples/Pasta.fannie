main recipe Pasta{

    ingredients{
        ingredient Test (to-taste),
        ingredient Test2 (to-taste)
    },

    tools{
        tool Blender[Blend : ingredient => liquid]
    },
    
    steps{
        START Blending Blender do Blend Test,
        STOP Blending => ContinousBlendedTest,
        Blender do Blend {ContinousBlendedTest, Test2} => OneThing,
        serve OneThing
    }
}